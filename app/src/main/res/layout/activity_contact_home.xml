<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="72dp"
                    android:layout_height="67dp"
                    android:layout_margin="@dimen/padding_10"
                    android:layout_gravity="center"
                    android:src="@drawable/logo"
                    android:textColor="#191919"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:drawableTint="#696969"
                    android:padding="15dp"
                    android:text="Techsays Software Solution Pvt Ltd"
                    android:textAlignment="center"
                    android:textColor="#191919"
                    android:textColorHint="#696969"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="190dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="#696969" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_local_phone_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/contactph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/transparent"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:padding="15dp"
                        android:text=" 9744613979"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imagheView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_email_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/contactemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/transparent"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:padding="15dp"
                        android:text=" contact@techsays.in"
                        android:textColor="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVhiew5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_home_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/contactaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/transparent"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:padding="15dp"
                        android:text="2nd Floor,Karukappadath Building Near Changampuzha Park Metro Station, Edappally, Kochi, Kerala 682024."
                        android:textColor="@color/black" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imsageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_access_time_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/transparent"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:padding="15dp"
                        android:text=" 9:00am to 7:00pm"
                        android:textColor="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bokkmfarkpage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="125dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <RelativeLayout
                        android:id="@+id/faceBookBtnlogout"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/login_screen_button_margin"
                        android:background="@drawable/facebook_button_bg"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/large_intrinsic_padding"
                            android:paddingRight="@dimen/large_intrinsic_padding"
                            app:srcCompat="@drawable/ic_bt_login_facebook"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@drawable/login_button_text_selector" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/sign_in_buttonlogout"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginBottom="@dimen/login_screen_button_margin"
                        android:background="@drawable/google_button_bg"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/large_intrinsic_padding"
                            android:paddingRight="@dimen/large_intrinsic_padding"
                            app:srcCompat="@drawable/ic_bt_login_google"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@drawable/login_button_text_selector" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/instagramlogout"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="center_horizontal"

                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginBottom="@dimen/login_screen_button_margin"
                        android:background="@drawable/email_button_bg"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/large_intrinsic_padding"
                            android:paddingRight="@dimen/large_intrinsic_padding"
                            app:srcCompat="@drawable/email"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@drawable/login_button_text_selector" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

